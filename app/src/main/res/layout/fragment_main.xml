<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main_bg">

    <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="117dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/img_security"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_title"
                    app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="@string/main_title"
                    android:textColor="@color/font_drawer_normal"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_logo"
                    app:layout_constraintBottom_toTopOf="@id/tv_sub_title"/>
            <TextView
                    android:id="@+id/tv_sub_title"
                    style="@style/TextViewStyle_Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="@string/main_sub_title"
                    android:textColor="@color/font_drawer_normal"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintBottom_toTopOf="@id/layout_container"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sub_title">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_patrol"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/banner_bg2"
                        android:orientation="horizontal"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintDimensionRatio="h ,320:90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/layout_report">
                    <ImageView
                            android:id="@+id/iv_patrol"
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/img_banner01"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/linear_patrol_container"/>

                    <LinearLayout
                            android:id="@+id/linear_patrol_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@id/iv_patrol"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5"
                            app:layout_constraintRight_toLeftOf="@id/btnPatrol">
                        <TextView
                                android:id="@+id/tv_patrol_title"
                                style="@style/TextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_banner_patrol_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="17dp"/>

                        <TextView
                                style="@style/TextViewStyle_Light"
                                android:id="@+id/tv_patrol_sub_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/main_banner_patrol_sub_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="13dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="7dp"/>
                    </LinearLayout>

                    <Button
                            android:id="@+id/btnPatrol"
                            style="@style/ButtonStyle"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/btn_main_radius"
                            android:text="@string/main_btn_detail"
                            android:textColor="@color/color_btn"
                            android:textSize="9dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/linear_patrol_container"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_report"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/banner_bg2"
                        android:orientation="horizontal"
                        app:layout_constraintDimensionRatio="h ,320:90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_patrol"
                        app:layout_constraintBottom_toTopOf="@id/layout_emergency_report">
                    <ImageView
                            android:id="@+id/iv_report"
                            android:layout_width="74dp"
                            android:layout_height="62dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/img_banner02"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/linear_report_container"/>

                    <LinearLayout
                            android:id="@+id/linear_report_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@id/iv_report"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/btnReport"
                            app:layout_constraintVertical_bias="0.5">
                        <TextView
                                android:id="@+id/tv_report_title"
                                style="@style/TextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_banner_report_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="17dp"/>

                        <TextView
                                style="@style/TextViewStyle_Light"
                                android:id="@+id/tv_report_sub_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/main_banner_report_sub_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="13dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="7dp"/>
                    </LinearLayout>

                    <Button
                            android:id="@+id/btnReport"
                            style="@style/ButtonStyle"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/btn_main_radius"
                            android:text="@string/main_btn_detail"
                            android:textColor="@color/color_btn"
                            android:textSize="9dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/linear_report_container"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_emergency_report"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/banner_bg2"
                        android:orientation="horizontal"
                        app:layout_constraintDimensionRatio="h ,320:90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_report"
                        app:layout_constraintBottom_toTopOf="@id/layout_manage">
                    <ImageView
                            android:id="@+id/iv_emergency_report"
                            android:layout_width="74dp"
                            android:layout_height="62dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/img_banner02"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/linear_emergency_report_container"/>

                    <LinearLayout
                            android:id="@+id/linear_emergency_report_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@id/iv_emergency_report"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/btnEmergencyReport"
                            app:layout_constraintVertical_bias="0.5">
                        <TextView
                                android:id="@+id/tv_emergency_report_title"
                                style="@style/TextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_banner_emergency_report_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="17dp"/>

                        <TextView
                                style="@style/TextViewStyle_Light"
                                android:id="@+id/tv_emergency_report_sub_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/main_banner_emergency_report_sub_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="13dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="7dp"/>
                    </LinearLayout>

                    <Button
                            android:id="@+id/btnEmergencyReport"
                            style="@style/ButtonStyle"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/btn_main_radius"
                            android:text="@string/main_btn_detail"
                            android:textColor="@color/color_btn"
                            android:textSize="9dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/linear_emergency_report_container"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_manage"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/banner_bg2"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h ,320:90"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_emergency_report">
                    <ImageView
                            android:id="@+id/iv_manage"
                            android:layout_width="68dp"
                            android:layout_height="62dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/img_banner03"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/linear_manage_container"/>

                    <LinearLayout
                            android:id="@+id/linear_manage_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintLeft_toRightOf="@id/iv_manage"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/btnManage"
                            app:layout_constraintVertical_bias="0.5">
                        <TextView
                                android:id="@+id/tv_manage_title"
                                style="@style/TextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_banner_manage_title"
                                android:textColor="@color/font_main_normal"
                                android:textSize="17dp"/>

                        <TextView
                                style="@style/TextViewStyle_Light"
                                android:id="@+id/tv_manage_sub_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/main_banner_manage_sub_title"
                                android:textColor="@color/font_main_normal"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="7dp"
                                android:textSize="13dp"
                                />
                    </LinearLayout>

                    <Button
                            android:id="@+id/btnManage"
                            style="@style/ButtonStyle"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/btn_main_radius"
                            android:text="@string/main_btn_detail"
                            android:textColor="@color/color_btn"
                            android:textSize="9dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/linear_manage_container"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>